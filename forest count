#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
char ch[1005][1005];
int n,c=0;
void count(int i,int j);
int main()
{
scanf("%d",&n);
for(int i=0;i<n;i++)
scanf("%s",ch[i]);
for(int i=0;i<n;i++)
for(int j=0;j<n;j++)
if(ch[i][j]=='T')
{
c++;
count(i,j);
}
printf("%d",c);
}
void count(int i,int j)
{
if(i<0||i>=n||j<0||j>=n)
return;
if(ch[i][j]!='T')
return;
ch[i][j]='W';
count(i-1,j);
count(i+1,j);
count(i,j-1);
count(i,j+1);
}

